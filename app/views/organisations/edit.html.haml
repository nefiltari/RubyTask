%h3 
  Edit Organisation: 
  %b= @org.name

%form{action: "/organisations/edit_do", method:"post"}

  %textarea#organisation-new-description{name:'description',rows:5, cols:50}= @org.description
  %br
  %input{type:'hidden',name:'name',value:@org.name}
  %a.my-a-button{href:"/organisations/#{URI.escape(@org.get_id)}"} cancel
  %input{type:'submit', value:'submit'}